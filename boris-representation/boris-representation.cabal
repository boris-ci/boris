                    -- FUCK
                    , Cabal == 1.24.*

  ghc-options:
                    -Wall

  hs-source-dirs:
                    src

  exposed-modules:
                    Boris.Representation.ApiV1

test-suite test
  type:
                    exitcode-stdio-1.0

  main-is:
                    test.hs

  ghc-options:
                    -Wall -threaded -O2

  hs-source-dirs:
                    test

  build-depends:
                      base                            >= 3          && < 5
                    , aeson                           >= 0.8        && < 1.3
                    , ambiata-boris-core
                    , ambiata-boris-core-test
                    , ambiata-boris-representation
                    , ambiata-disorder-core
                    , ambiata-disorder-corpus
                    , ambiata-p
                    , hedgehog                        == 0.5.*
                    , mmorph                          == 1.0.*
                    , text                            == 1.2.*
