build-type:            Simple
description:           boris-representation

library
  build-depends:
                      base                            >= 3          && < 5
                    , aeson                           >= 0.8        && < 1.3
                    , ambiata-boris-core
                    , ambiata-p
                    , containers                      == 0.5.*
